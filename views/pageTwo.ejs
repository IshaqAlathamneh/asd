<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
<h1>All countries</h1>
<%- include('./layout/header.ejs') %>
    </header>
    <main>
        <% country.forEach(elem => { %>
            <div>
                <h3><%= elem.name%>  </h3>
                <li><%= elem.conf%>  </li>
                <li><%= elem.death%></li>
                <li><%= elem.rec%>  </li>
                 <p><%= elem.date%></p>
                <form action="/getCountryResult" method="POST">
                    <input type="hidden" value="<%= elem.name%>" name="name">
                    <input type="hidden" value="<%= elem.conf%>" name="conf">
                    <input type="hidden" value="<%= elem.death%>" name="death">
                    <input type="hidden" value="<%= elem.rec%>" name="rec">
                    <input type="hidden" value="<%= elem.date%>" name="date">
                <button type="submit">add to my records</button>
            </form>
            </div>
       <% }) %>
       
    </main>
    <footer>

    </footer>
    
</body>
</html>